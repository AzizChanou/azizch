---
import ScrollToTop from "../components/ScrollToTop.astro";
import BaseHead from "../components/BaseHead.astro";
import HeadBar from "../components/HeadBar.astro";
import FootBar from "../components/FootBar.astro";
import Dot from "../components/Dot.astro";

const { title, description } = Astro.props;
---

<!doctype html>
<html data-theme="dark">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body
    class="min-h-screen w-screen bg-black text-white overflow-x-hidden relative overscroll-y-auto font-jost"
  >
    <!-- <Dot /> -->
    <main class="relative min-h-screen w-full">
      <div
        id="__top"
        class="min-h-screen mx-auto flex flex-col justify-between px-6 h-full w-full"
      >
        <div class="h-full w-full">
          <HeadBar />
          <div id="swup" class="transition-fade w-full">
            <slot />
          </div>
        </div>
        <ScrollToTop />
        <FootBar />
      </div>
    </main>
  </body>
</html>
