---
import Default from "../layouts/Default.astro";
import InputText from "../components/form/InputText.astro";
---

<Default>
  <div
    id="contact"
    class="py-16 mx-auto flex flex-col lg:flex-row font-montserrat-alternates"
  >
    <div class="lg:w-1/2 space-y-6">
      <h1 class="text-4xl font-bold tracking-tight sm:text-5xl">
        Contactez-moi !
      </h1>
      <p class="text-xl font-semibold sm:text-2xl">
        Vous avez une idée, un projet, nous <br />
        pouvons vous aider à les concrétiser <br />
        de manière optimale.
      </p>
    </div>
    <form
      action=""
      class="mt-8 lg:mt-0 lg:w-1/2 lg:grid grid-cols-2 gap-8 space-y-12 lg:space-y-0"
    >
      <div>
        <label for="name" class="sr-only">Nom & Prenoms</label>
        <input
          name="name"
          type="text"
          class="w-full pb-1 text-sm border-gray-300 border-b outline-0 bg-transparent !text-white"
          placeholder="Nom & Prenoms"
        />
      </div>

      <div>
        <label for="email" class="sr-only">Email</label>
        <input
          name="email"
          type="email"
          class="w-full pb-1 text-sm border-gray-300 border-b outline-0 bg-transparent !text-white"
          placeholder="Email"
        />
      </div>

      <div>
        <label for="phone" class="sr-only">Numero</label>
        <input
          name="phone"
          type="text"
          class="w-full pb-1 text-sm border-gray-300 border-b outline-0 bg-transparent !text-white"
          placeholder="Numero"
        />
      </div>

      <div>
        <label for="entreprise" class="sr-only">Entreprise</label>
        <input
          name="entreprise"
          type="text"
          class="w-full pb-1 text-sm border-gray-300 border-b outline-0 bg-transparent !text-white"
          placeholder="Entreprise"
        />
      </div>

      <div>
        <label for="histoire" class="sr-only">Votre histoire</label>
        <textarea
          name="histoire"
          id=""
          class="w-full pb-1 text-sm border-gray-300 border-b outline-0 bg-transparent !text-white"
          cols="30"
          rows="10"
          placeholder="Votre histoire"></textarea>
      </div>

      <div class="">
        <button
          type="submit"
          class="inline-block px-5 py-3 ml-3 font-medium text-white bg-transparent w-full lg: border-2 border-white rounded-lg shadow-sm hover:bg-white hover:text-black duration-500"
        >
          Envoyer
        </button>
      </div>
    </form>
  </div>
</Default>
