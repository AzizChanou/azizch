---
import { Icon } from "astro-icon/components";
import Default from "../layouts/Default.astro";
---

<Default title="Contact-me">
  <div class="h-full w-full flex flex-col justify-center items-center">
    <h3 class="text-5xl font-montserrat-alternates text-center font-semibold uppercase">
      CONTACT
    </h3>
    <div
      class="py-16 mx-auto flex w-full flex-col lg:flex-row font-montserrat-alternates"
    >
      <div class="flex justify-center items-center w-full">
        <ul class="flex flex-col md:flex-row gap-8 mt-10 items-center text-2xl">
          <li>
            <a
              rel="noopener"
              target="_blank"
              aria-label="Numero"
              href="tel:+229 66 48 51 60"
              class="flex items-center space-x-3"
            >
              <Icon name="mdi:phone" class="text-3xl" />
              <span>+229 66 48 51 60</span>
            </a>
          </li>
          <li>
            <a
              rel="noopener"
              target="_blank"
              aria-label="Whatsapp"
              href="https://api.whatsapp.com/qr/3NBE4KUGSOJEG1?autoload=1"
              class="flex items-center space-x-3"
            >
              <Icon name="mdi:whatsapp" class="text-3xl" />
              <span>+229 66 48 51 60</span>
            </a>
          </li>
          <li>
            <a
              rel="noopener"
              target="_blank"
              aria-label="Mail"
              href="mailto:azizchanou@gmail.com"
              class="flex items-center space-x-3"
            >
              <Icon name="mdi:mail" class="text-3xl" />
              <span>azizchanou@gmail.com</span>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</Default>
