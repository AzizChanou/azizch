---
import { Icon } from "astro-icon/components";
import Default from "../layouts/Default.astro";
---

<script>
  import useMail from "../utils/useMail";

  const contactForm = document.getElementById(
    "contact-form",
  ) as HTMLFormElement;

  contactForm.addEventListener("submit", (event: SubmitEvent) => {
    event.preventDefault();
    let mail;
    if (event.target) {
      mail = {
        name: event.target.name.value,
        email: event.target.email.value,
        phone: event.target.phone.value,
        message: event.target.message.value,
      };
    }
    console.log(mail);
  });
</script>

<Default>
  <div class="h-full w-full flex flex-col justify-center items-center">
    <h3 class="text-5xl font-montserrat-alternates font-semibold uppercase">
      CONTACT
    </h3>
    <div
      id="contact-form"
      class="py-16 mx-auto flex w-full flex-col lg:flex-row font-montserrat-alternates"
    >
      <div class="lg:w-1/2">
        <h1 class="text-4xl font-bold tracking-tight sm:text-5xl">
          Contactez-moi !
        </h1>
        <ul class="space-y-8 mt-10">
          <li>
            <a
              href="mailto:azizchanou@gmail.com"
              class="flex items-center space-x-3 w-full"
            >
              <Icon name="mdi:mail" class="text-3xl" />
              <span>azizchanou@gmail.com</span>
            </a>
          </li>
          <li>
            <a
              href="tel:+229 66 48 51 60"
              class="flex items-center space-x-3 w-full"
            >
              <Icon name="mdi:phone" class="text-3xl" />
              <span>+229 66 48 51 60</span>
            </a>
          </li>
          <li>
            <a
              href="https://goo.gl/maps/4mJf9kYHnYn"
              class="flex items-center space-x-3 w-full"
            >
              <Icon name="mdi:map" class="text-3xl" />
              <span>St. Rita, Cotonou, BÃ©nin</span>
            </a>
          </li>
        </ul>
      </div>
      <form
        id="contact-form"
        class="mt-8 lg:mt-0 lg:w-1/2 lg:grid grid-cols-2 gap-8 space-y-12 lg:space-y-0"
      >
        <div class="col-span-2">
          <label for="name" class="sr-only">Nom & Prenoms</label>
          <input
            name="name"
            id="name"
            type="text"
            class="w-full pb-1 text-sm border-gray-300 border-b outline-0 bg-transparent !text-white"
            placeholder="Nom & Prenoms"
            autocomplete="name"
            required
          />
        </div>

        <div>
          <label for="email" class="sr-only">Email</label>
          <input
            name="email"
            id="email"
            type="email"
            class="w-full pb-1 text-sm border-gray-300 border-b outline-0 bg-transparent !text-white"
            placeholder="Email"
            autocomplete="email"
            required
          />
        </div>

        <div>
          <label for="phone" class="sr-only">Numero</label>
          <input
            name="phone"
            id="phone"
            type="tel"
            pattern="[0-9]*"
            inputmode="tel"
            class="w-full pb-1 text-sm border-gray-300 border-b outline-0 bg-transparent !text-white"
            placeholder="Numero mobile Ex: +229 66 48 51 60"
            autocomplete="mobile"
            required
          />
        </div>

        <div class="col-span-2">
          <label for="message" class="sr-only">Message</label>
          <textarea
            name="message"
            id="message"
            class="w-full pb-1 text-sm border-gray-300 border-b outline-0 bg-transparent !text-white"
            cols="30"
            rows="10"
            placeholder="Message"
            required></textarea>
        </div>

        <div class="col-span-2">
          <button
            type="submit"
            class="inline-block px-5 py-3 font-medium text-white bg-transparent w-full border-2 border-white rounded-lg shadow-sm hover:bg-white hover:text-black duration-500"
          >
            Envoyer
          </button>
        </div>
      </form>
    </div>
  </div>
</Default>
