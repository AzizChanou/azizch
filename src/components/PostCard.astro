---
const { post, page } = Astro.props;
---

<a href={`/${page}/${post.slug}/`}>
  <div
    class={`p-6 overflow-hidden rounded-lg min-h-64 h-64 max-h-64 w-full shadow shadow-white hover:bg-slate-100 hover:text-slate-950 hover:scale-105 duration-300`}
  >
    <h2 class="text-xl font-bold">{post.title}</h2>
    <p class="mt-4">
      {post.description}
    </p>
    <div class="flex items-center mt-8 space-x-4">
      {post.pubDate}
    </div>
  </div>
</a>
