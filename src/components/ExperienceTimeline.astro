---

<div class="w-full max-w-3xl mx-auto px-4 py-8 md:py-16">
  <h2 class="text-3xl font-bold text-center text-white mb-12">Experience</h2>
  <ol class="relative border-l border-slate-700">
    {
      experiences.map((exp, index) => (
        <li class="mb-10 ml-8">
          <div class="absolute -left-4">
            <div class="relative flex items-center justify-center">
              <span class="flex items-center justify-center size-7 rounded-full ring-8 ring-slate-900 backdrop-blur-sm bg-white/20 shadow-lg">
                <svg
                  class="size-3 text-white"
                  aria-hidden="true"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4Z M0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z" />
                </svg>
              </span>
              {index === 0 && (
                <div class="size-8 bg-cyan-300/25 animate-ping rounded-full absolute -z-10" />
              )}
            </div>
          </div>
          {experiences.length - 1 === index && (
            <span
              class={`absolute flex items-center justify-center size-4 rounded-full -left-2 bottom-0 backdrop-blur-sm bg-white/20 shadow-lg`}
            />
          )}
          <div class="p-4 rounded-lg border border-slate-700 shadow-xl backdrop-blur-md bg-white/10">
            <div class="block md:flex items-center justify-between mb-2">
              <h3 class="text-lg font-semibold text-white">
                {exp.role} chez <span class="text-cyan-500">{exp.company}</span>
              </h3>
              <time class="block text-sm font-normal leading-none text-slate-300 mt-2 md:mt-0">
                {exp.startDate} - {exp.endDate}
              </time>
            </div>
            <p class="text-base font-normal text-slate-200">
              {exp.description}
            </p>
          </div>
        </li>
      ))
    }
  </ol>
</div>
