---
import "../assets/css/global.css";
import { siteConfig } from "../consts";
import { SEO } from "astro-seo";
import GoogleAnalytics from "./GoogleAnalytics.astro";

export interface Props {
  title: string;
  description: string;
  image?: string;
}

const canonicalURL = siteConfig.site;

const {
  title,
  description = siteConfig.description,
  image = siteConfig.image,
} = Astro.props;
const full_title = `${title ? title + " | " : ""} ${siteConfig.title}`;
---

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <meta name="generator" content={Astro.generator} />

  <link rel="icon" type="image/png" href={siteConfig.icon} />
  <link rel="sitemap" href="/sitemap-0.xml" />
  <link rel="sitemap" href="/sitemap-index.xml" />
  <!-- <link rel="canonical" href={canonicalURL} /> -->

  <title data-title={full_title}>{full_title}</title>
  <meta name="title" content={full_title} />
  <meta name="description" content={description} />

  <SEO
    title={full_title}
    description={description}
    openGraph={{
      basic: {
        title: full_title,
        type: "A type.",
        image: image,
        url: canonicalURL,
      },
      image: {
        alt: full_title,
        height: 630,
        width: 1200,
        secureUrl: image,
        type: "image/jpeg",
        url: image,
      },
    }}
    twitter={{
      card: "summary_large_image",
      title: full_title,
      description: description,
      image: image,
      imageAlt: full_title,
      site: "@azizchanou",
      creator: "@azizchanou",
    }}
    extend={{
      link: [{ rel: "icon", href: siteConfig.icon, type: "image/svg+xml" }],
      meta: [{}],
    }}
  />

  {
    process.env.NODE_ENV === "production" && (
      <GoogleAnalytics id="G-V648TRT3XT" />
    )
  }
  <script src="../assets/ts"></script>

  <script>
    window.addEventListener("blur", () => {
      document.title = "Come back";
    });

    window.addEventListener("focus", () => {
      document.title = "KYOGRE";
    });
  </script>
</head>
